<!DOCTYPE html>
<html>

<head>
	<% include partial/head.ejs %>
	<title>Homefront - Submit</title>
	<script src="/gen_validatorv4.js" type="text/javascript"></script>
</head>

<body>

	<div id="navigation">
		<a href="/"><h1 class="navElement">Homefront</h1></a>
		<img src="/icon.png" alt="icon" class="navElement">
		<a class="navElement navLink" href="/submit">Submit a safety report</a>
	</div>

	<div style="height:100px"></div>
	<div id="mainForm">
		
		<h1>Submit a new safety report</h1><br>

			<form id='safetyReport' method='post' action='/submit'>
			    <table cellspacing="2" cellpadding="2" border="0">

			    	<tr><td><h2>Basic Information</h2></td></tr>
			        <tr>
			            <td align="right">
			                Housing Style
			            </td>
			            <td>
			                <select name="HousingType">
			                    <option value="House">
			                        House
			                    </option>
			                    <option value="Apartment">
			                        Apartment
			                    </option>
			                    <option value="Dorm">
			                        Dorm
			                    </option>
			                </select>
			            </td>
			        </tr>
			        <tr>
			            <td align="right">
			                Address
			            </td>
			            <td>
			                <input type="text" placeholder="Address" name="StreetAddress">
			                <input type="text" placeholder="City" name="City">
			                <select name="State">
								<option value="AL">AL</option>
								<option value="AK">AK</option>
								<option value="AZ">AZ</option>
								<option value="AR">AR</option>
								<option value="CA">CA</option>
								<option value="CO">CO</option>
								<option value="CT">CT</option>
								<option value="DE">DE</option>
								<option value="DC">DC</option>
								<option value="FL">FL</option>
								<option value="GA">GA</option>
								<option value="HI">HI</option>
								<option value="ID">ID</option>
								<option value="IL">IL</option>
								<option value="IN">IN</option>
								<option value="IA">IA</option>
								<option value="KS">KS</option>
								<option value="KY">KY</option>
								<option value="LA">LA</option>
								<option value="ME">ME</option>
								<option value="MD">MD</option>
								<option value="MA">MA</option>
								<option value="MI">MI</option>
								<option value="MN">MN</option>
								<option value="MS">MS</option>
								<option value="MO">MO</option>
								<option value="MT">MT</option>
								<option value="NE">NE</option>
								<option value="NV">NV</option>
								<option value="NH">NH</option>
								<option value="NJ">NJ</option>
								<option value="NM">NM</option>
								<option value="NY">NY</option>
								<option value="NC">NC</option>
								<option value="ND">ND</option>
								<option value="OH">OH</option>
								<option value="OK">OK</option>
								<option value="OR">OR</option>
								<option value="PA">PA</option>
								<option value="RI">RI</option>
								<option value="SC">SC</option>
								<option value="SD">SD</option>
								<option value="TN">TN</option>
								<option value="TX">TX</option>
								<option value="UT">UT</option>
								<option value="VT">VT</option>
								<option value="VA">VA</option>
								<option value="WA">WA</option>
								<option value="WV">WV</option>
								<option value="WI">WI</option>
								<option value="WY">WY</option>
							</select>
			                <input type="text" name="ZipCode" placeholder="Zip Code">
			            </td>
			        </tr>
			        <tr>
			            <td align="right">
			                Square Footage
			            </td>
			            <td>
			                <input type="number" value="100" min="0" name="SqFt">ft<sup>2</sup>
			            </td>
			        </tr>
					<tr>
						<td align="right">
							Intended Occupancy
						</td>
						<td>
							<input type="number" value="2" min="1" name="NumOfOccupancy">
						</td>
					</tr>
					<tr>
						<td align="right">
							Has Accessibility Options?
						</td>
						<td>
							<input type="checkbox" name="Accessibility">
						</td>
					</tr>

			    	
			    	 <tr><td><h2>Kitchen</h2></td></tr>
			         <tr>
			            <td align="right">
			                Number of Kitchens
			            </td>
			            <td>
			                <input type="number" value="1" min="0" name="NumOfKitchen">
			            </td>
			        </tr>

					<tr><td><h2>Bathrooms</h2></td></tr>
					<tr>
						<td align="right">
							Number of Bathrooms
						</td>
						<td>
							<input type="number" value="1" min="0" name="NumOfBathroom">
						</td>
					</tr>
					<tr>
						<td align="right">
							Has Shower?
						</td>
						<td>
							<input type="checkbox" name="HasShower">
						</td>
					</tr>

					<tr><td><h2>Roomrooms</h2></td></tr>
					<tr>
						<td align="right">
							Number of Living Rooms
						</td>
						<td>
							<input type="number" value="1" min="0" name="NumOfLivingRoom">
						</td>
					</tr>
					<tr>
						<td align="right">
							Number of Bedrooms
						</td>
						<td>
							<input type="number" value="1" min="0" name="NumOfBedrooms">
						</td>
					</tr>
					<tr>
						<td align="right">
							Average Bedroom Square Footage
						</td>
						<td>
							<input type="number" value="1" min="0" name="AvgBedroomSqFt">ft<sup>2</sup>
						</td>
					</tr>
					<tr>
						<td align="right">
							Bedroom has Windows?
						</td>
						<td>
							<input type="checkbox" name="WindowInBedroom">
						</td>
					</tr>
					<tr>
						<td align="right">
							Number of Additional Rooms
						</td>
						<td>
							<input type="number" value="1" min="0" name="NumOfAdditionalRooms">
						</td>
					</tr>

					<tr><td><h2>Misc</h2></td></tr>
					<tr>
						<td align="right">
							House Number Legible?
						</td>
						<td>
							<input type="checkbox" name="HouseNumberLegible">
						</td>
					</tr>
					<tr>
						<td align="right">
							Number of Exits
						</td>
						<td>
							<input type="number" value="1" min="0" name="NumberOfExits">
						</td>
					</tr>
					<tr>
						<td align="right">
							Handrails on Stairs
						</td>
						<td>
							<input type="checkbox" name="HandrailsOnStairs">
						</td>
					</tr>
					<tr>
						<td align="right">
							Has Trash Barrels
						</td>
						<td>
							<input type="checkbox" name="HasTrashBarrels">
						</td>
					</tr>


			        <tr>
			            <td align="right"></td>
			            <td>
			                <div id="myform_errorloc" class="error_strings">
			                </div>
			            </td>
			        </tr>
			        <tr>
			            <td align="right"></td>
			            <td>
			                <input type="submit" value="Submit"/>
			            </td>
			        </tr>
			    </table>
			</form>

		<script type="text/javascript">
			const frmValidator = new Validator("safetyReport");
			frmValidator.addValidation("StreetAddress","req","Please enter a street address.")
			frmValidator.addValidation("City","req","Please enter a city.")
			frmValidator.addValidation("ZipCode","req","Please enter a zip code.")
			frmValidator.addValidation("ZipCode","regexp=^([0-9]){5}$","Please enter a valid zip code.")
		</script>


	</div>


</body>

</html>